public class Variation999 : MyScriptApi
{
    Utils u = new();

    // Required overrides.
    public override int Setup()
    {
        Print($"Setup()");

        worldX = 100;
        worldY = 50;

        CreatePlayer(Role.Oligarch, "Vladimir");
        CreatePlayer(Role.Sycophant, "Donald");
        CreatePlayer(Role.Rebel, "Volodymyr ");
        CreatePlayer(Role.Peon, "Bob");
