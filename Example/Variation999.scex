    public override int Move()
    {
        Print($"Move()");

        var player = RandomPlayer();
        if (players.ContainsKey(player))
        {
            Print($"Player be gone:{player}");
            players.Remove(player);
        }
        else
        {
            Print($"Player already gone:{player}");
        }

        return 0;
    }
